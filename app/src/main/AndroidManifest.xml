<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.iticket">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-permission-sdk-23 android:name="android.permission.INTERNET" />
    <uses-permission-sdk-23 android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission-sdk-23 android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/iticket_icon"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/iticket_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.noActionBar"
        tools:targetApi="q">

        <activity android:name=".DetailActivity" />
        <activity android:name=".HistoryActivity" />
        <activity android:name=".MyWalletActivity" />
        <activity android:name=".onboarding.OnBoardingThreeActivity" />
        <activity android:name=".onboarding.OnBoardingTwoActivity" />
        <activity android:name=".onboarding.OnBoardingOneActivity" />
        <activity android:name="com.example.iticket.checkout.ChooseSeatActivity" />
        <activity android:name="com.example.iticket.checkout.CheckoutSuccessActivity" />
        <activity android:name=".ArtBoardsActivity" />
        <activity android:name="com.example.iticket.checkout.CheckoutActivity" />
        <activity android:name=".EditProfileActivity" />
        <activity android:name=".home.HomeActivity" />
        <activity android:name=".sign.signin.SignInActivity" />
        <activity android:name=".sign.signup.SignUpActivity" />
        <activity android:name=".sign.signup.SignUpPhotoScreenActivity" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>